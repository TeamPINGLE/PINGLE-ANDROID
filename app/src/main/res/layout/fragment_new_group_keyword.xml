<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/spacing24" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/spacing24" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/spacing16" />

        <TextView
            android:id="@+id/tv_new_group_keyword_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/new_group_input_title"
            android:textAppearance="@style/TextAppearance.Pingle.Title.Semi.24"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/gl_start"
            app:layout_constraintTop_toBottomOf="@id/gl_top" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_new_group_keyword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@id/gl_end"
            app:layout_constraintStart_toEndOf="@id/gl_start"
            app:layout_constraintTop_toBottomOf="@id/tv_new_group_keyword_title">

            <com.google.android.material.chip.Chip
                style="@style/Theme.Pingle.Chip.Keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_group_keyword_circle" />

            <com.google.android.material.chip.Chip
                style="@style/Theme.Pingle.Chip.Keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_group_keyword_school_club" />

            <com.google.android.material.chip.Chip
                style="@style/Theme.Pingle.Chip.Keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_group_keyword_student_council" />

            <com.google.android.material.chip.Chip
                style="@style/Theme.Pingle.Chip.Keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_group_keyword_university" />

            <com.google.android.material.chip.Chip
                style="@style/Theme.Pingle.Chip.Keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_group_keyword_high_school" />

            <com.google.android.material.chip.Chip
                style="@style/Theme.Pingle.Chip.Keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_group_keyword_middle_school" />

            <com.google.android.material.chip.Chip
                style="@style/Theme.Pingle.Chip.Keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_group_keyword_lecture" />

            <com.google.android.material.chip.Chip
                style="@style/Theme.Pingle.Chip.Keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_group_keyword_study" />

            <com.google.android.material.chip.Chip
                style="@style/Theme.Pingle.Chip.Keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_group_keyword_private_club" />

            <com.google.android.material.chip.Chip
                style="@style/Theme.Pingle.Chip.Keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_group_keyword_club" />

            <com.google.android.material.chip.Chip
                style="@style/Theme.Pingle.Chip.Keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_group_keyword_etc" />
        </com.google.android.material.chip.ChipGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>