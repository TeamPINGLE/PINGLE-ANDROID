<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Pingle" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowBackground">@color/g_11</item>
    </style>

    <style name="Theme.Pingle" parent="Base.Theme.Pingle" />

    <!-- Splash -->
    <style name="Theme.Pingle.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/g_11</item>
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.Pingle</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Button -->
    <style name="Theme.Pingle.Button" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:backgroundTint">@color/selector_all_btn_background</item>
        <item name="android:textColor">@color/selector_all_btn_text_color</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Theme.Pingle.Button.L" parent="Theme.Pingle.Button">
        <item name="android:height">@dimen/button_l_height</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAppearance">@style/TextAppearance.Pingle.Sub.Semi.16</item>
    </style>

    <style name="Theme.Pingle.Button.M" parent="Theme.Pingle.Button">
        <item name="android:height">@dimen/button_m_height</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAppearance">@style/TextAppearance.Pingle.Body.Semi.14</item>
    </style>

    <style name="Theme.Pingle.Button.S" parent="Theme.Pingle.Button">
        <item name="android:height">@dimen/button_s_height</item>
        <item name="android:layout_width">@dimen/button_s_width</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/selector_pingle_btn_s</item>
        <item name="android:textColor">@color/selector_pingle_btn_s</item>
        <item name="android:textAppearance">@style/TextAppearance.Pingle.Body.Semi.14</item>
    </style>

    <style name="Theme.Pingle.Button.Number" parent="Theme.Pingle.Button">
        <item name="android:height">50dp</item>
        <item name="android:width">50dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAppearance">@style/TextAppearance.Pingle.Title.Semi.24</item>
        <item name="android:backgroundTint">@color/selector_plan_recruitment_btn_background</item>
        <item name="android:textColor">@color/selector_plan_recruitment_btn_text</item>
    </style>

    <style name="Theme.Pingle.Button.Check" parent="Theme.Pingle.Button">
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">3dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Pingle.Cap.Semi.10</item>
        <item name="android:backgroundTint">@color/selector_plan_recruitment_btn_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- chip -->
    <style name="Theme.Pingle.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:stateListAnimator">@null</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="android:checked">false</item>
        <item name="chipMinHeight">0dp</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Pingle.Chip.All" parent="Theme.Pingle.Chip">
        <item name="cornerRadius">50dp</item>
        <item name="textStartPadding">16dp</item>
        <item name="textEndPadding">16dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Pingle.Cap.Bold.12</item>
    </style>

    <style name="Theme.Pingle.Fab" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/white</item>
        <item name="elevation">0dp</item>
        <item name="fabCustomSize">@dimen/fab_size</item>
        <item name="rippleColor">@color/g_04</item>
        <item name="tint">@null</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CornerSize50Percent
        </item>
    </style>

    <!-- tag -->
    <style name="Theme.Pingle.Chip.Tag.All" parent="Theme.Pingle.Chip">
        <item name="cornerRadius">50dp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Theme.Pingle.Chip.Tag.L" parent="Theme.Pingle.Chip.Tag.All">
        <item name="textStartPadding">16dp</item>
        <item name="textEndPadding">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:clickable">true</item>
        <item name="chipBackgroundColor">@color/selector_pingle_tag_l_background</item>
        <item name="android:textColor">@color/selector_pingle_tag_l_text_color</item>
    </style>

    <style name="Theme.Pingle.Chip.Tag.M" parent="Theme.Pingle.Chip.Tag.All">
        <item name="textStartPadding">10dp</item>
        <item name="textEndPadding">10dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:clickable">false</item>
        <item name="chipBackgroundColor">@color/g_07</item>
        <item name="android:textColor">@color/pingle_green</item>
        <item name="android:textAppearance">@style/TextAppearance.Pingle.Cap.Semi.12</item>
    </style>

    <style name="Theme.Pingle.Chip.Tag.S" parent="Theme.Pingle.Chip.Tag.All">
        <item name="textStartPadding">8dp</item>
        <item name="textEndPadding">8dp</item>
        <item name="android:paddingVertical">3dp</item>
        <item name="android:clickable">false</item>
        <item name="chipBackgroundColor">@color/g_10</item>
        <item name="android:textColor">@color/pingle_green</item>
        <item name="android:textAppearance">@style/TextAppearance.Pingle.Cap.Semi.10</item>
    </style>

    <!-- Corner size -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!--  number picker  -->
    <style name="AppTheme.NumberPicker" parent="">
        <item name="android:textSize">18dp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>
</resources>