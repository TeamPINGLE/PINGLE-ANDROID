<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="groupListEntity"
            type="org.sopt.pingle.domain.model.GroupListEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_my_group_list_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_border_radius_12"
            android:backgroundTint="@color/g_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/spacing24" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/spacing24" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="@dimen/spacing20" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="@dimen/spacing20" />

            <!-- TODO pingle tag로 변경 , text에 데바 적용 -->
            <org.sopt.pingle.util.component.PingleBadge
                android:id="@+id/tag_my_group_list_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/gl_top" />

            <TextView
                android:id="@+id/tv_my_group_list_owner_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing10"
                android:textAppearance="@style/TextAppearance.Pingle.Title.Semi.20"
                android:textColor="@color/g_01"
                android:text="@{groupListEntity.name}"
                app:layout_constraintBottom_toTopOf="@id/gl_bottom"
                app:layout_constraintEnd_toStartOf="@id/gl_end"
                app:layout_constraintStart_toEndOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/tag_my_group_list_owner"
                tools:text="단체1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_my_group_list_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_my_group_list_owner"
            app:layout_constraintBottom_toBottomOf="@id/layout_my_group_list_owner"
            app:layout_constraintEnd_toEndOf="@id/layout_my_group_list_owner" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>